<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="flash"><%= flash.notice %></p>
    <div class="nav-bar">
      <ul class="nav-ul">
        <li class="nav-li"><%= link_to "Articles", articles_path %></li>
        <li class="nav-li"><%= link_to "Tags", tags_path %></li>
        <% if logged_in? %>
          <li class="nav-li"><%= link_to 'Authors', authors_path %></li>
        <% end %>
      </ul>
    </div>

      <%= yield %>
      <hr>
      <h6 id="UserLog">
        <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "(Logout)", logout_path %>
        <% else %>
          <%= link_to "(Login)", login_path %>
        <% end %>
      </h6>

  </body>
</html>

